<body>
<%- include('navbar'); -%>
<div class="container-fluid">
    <div class="row pt-4 px-2">
            <div class="col">
                <% if (show) { %>
                <a href="/logout">
                    <img src="/svg/logout.svg" alt="">
                </a>
                    <% } %>
            </div>
            <div class="col">
                <img src="/images/profile/default.jpg" id="profileImg" class="img-fluid rounded-circle mx-auto d-block" alt="">
